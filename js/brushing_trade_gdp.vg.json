{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Trade (% of GDP) — Regional Comparison (1970–2023)",
  "data": {
    "url": "data/trade_gdp_long.csv",
    "format": { "type": "csv" }
  },

  "params": [
    {
      "name": "region",
      "value": "East Asia & Pacific",
      "bind": {
        "input": "select",
        "options": [
          "East Asia & Pacific",
          "South Asia",
          "Europe & Central Asia"
        ],
        "name": "Select Region: "
      }
    },
    {
      "name": "brush",
      "select": { "type": "interval", "encodings": ["x"] }
    }
  ],

  "transform": [
    { "filter": "datum['Country Name'] == region" }
  ],

  "vconcat": [
    {
      "width": 650,
      "height": 280,
      "layer": [
        {
          "mark": { "type": "area", "opacity": 0.7, "color": "#cf3673" },
          "encoding": {
            "x": {
              "field": "Year",
              "type": "quantitative",
              "scale": { "domain": { "param": "brush" } },
              "axis": { "title": null }
            },
            "y": {
              "field": "Trade_GDP",
              "type": "quantitative",
              "title": "Trade (% of GDP)"
            },
            "tooltip": [
              { "field": "Year", "title": "Year" },
              { "field": "Trade_GDP", "title": "Trade (% of GDP)", "format": ".2f" }
            ]
          }
        }
      ]
    },
    {
      "width": 650,
      "height": 70,
      "mark": { "type": "area", "color": "#5d6a71", "opacity": 0.4 },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "axis": { "title": "Year" }
        },
        "y": {
          "field": "Trade_GDP",
          "type": "quantitative",
          "axis": { "tickCount": 3, "grid": false }
        }
      },
      "params": [{ "name": "brush" }]
    }
  ],

  "config": {
    "axis": { "labelFont": "Inter", "titleFont": "Inter", "labelFontSize": 12 },
    "title": { "font": "Inter", "fontSize": 18, "anchor": "middle" },
    "view": { "stroke": null },
    "background": "#ffffff"
  }
}
