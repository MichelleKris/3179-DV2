{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Tariff Structure in Asia (AHS Tariff Line Shares, 2000â€“2022)",
    "fontSize": 20,
    "font": "Arial",
    "fontWeight": "bold",
    "anchor": "middle"
  },
  "width": 625,
  "height": 500,

  "data": {
    "url": "data/asia_tariff_structure_long.csv",
    "format": {
      "type": "csv",
      "parse": {"value": "number"}
    }
  },

  "params": [
    {
      "name": "tariff_select",
      "value": "Duty-Free TL %",
      "bind": {
        "input": "select",
        "options": [
          "Duty-Free TL %",
          "Dutiable TL %",
          "Specific TL %"
        ],
        "labels": [
          "Duty-Free Tariff Lines (%)",
          "Dutiable Tariff Lines (%)",
          "Specific Tariff Lines (%)"
        ],
        "name": "Select Tariff Type: "
      }
    }
  ],

  "transform": [
    {"filter": "datum.tariff_type == tariff_select"},
    {"filter": "datum.year >= 2000"},
    {
      "calculate": "(datum.value === 'NA' || datum.value == null) ? null : datum.value",
      "as": "clean_value"
    },
    {
      "calculate": "isValid(datum.clean_value) ? format(datum.clean_value, '.2f') + '%' : 'No data available'",
      "as": "tooltip_value"
    }
  ],

  "layer": [
    {
      "mark": {"type": "rect", "color": "#d9d9d9"},
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": {"labelAngle": 45, "labelFontSize": 10, "grid": false}
        },
        "y": {
          "field": "country",
          "type": "nominal",
          "title": "Country",
          "axis": {"labelFontSize": 10, "grid": false}
        },
        "tooltip": [
          {"field": "country", "title": "Country"},
          {"field": "year", "title": "Year"},
          {"value": "No data available", "title": "% of Tariff Lines"}
        ]
      }
    },
    {
      "mark": {"type": "rect"},
      "encoding": {
        "x": {"field": "year", "type": "ordinal"},
        "y": {"field": "country", "type": "nominal"},
        "color": {
          "field": "clean_value",
          "type": "quantitative",
          "title": "% of Tariff Lines",
          "scale": {
            "domain": [0.01, 100],
            "scheme": "blues",
            "type": "log"
          }
        },
        "tooltip": [
          {"field": "country", "title": "Country"},
          {"field": "year", "title": "Year"},
          {"field": "tooltip_value", "title": "% of Tariff Lines"}
        ]
      }
    }
  ],

  "config": {
    "background": "#fafafa",
    "font": "Arial",
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 11, "titleFontSize": 13},
    "legend": {"labelFontSize": 12, "titleFontSize": 13}
  }
}
